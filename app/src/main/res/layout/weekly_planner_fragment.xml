<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/week"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <TextView
                        android:id="@+id/breakfast"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="조식"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#9255BAE3"/>
                    <TextView
                        android:id="@+id/lunch"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="중식"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#9255BAE3"/>
                    <TextView
                        android:id="@+id/dinner"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="석식"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#9255BAE3"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/sunday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="일"
                        android:textSize="30sp"
                        android:textColor="#FF0000"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#A8FFF59C" />
                    <Button
                        android:id="@+id/sun_b"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="Sun_b"
                        />
                    <Button
                        android:id="@+id/sun_l"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="Sun_l" />
                    <Button
                        android:id="@+id/sun_d"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="sun_d" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/monday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="월"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#A8FFF59C"/>
                    <Button
                        android:id="@+id/mon_b"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="mon_b" />
                    <Button
                        android:id="@+id/mon_l"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="mon_l" />
                    <Button
                        android:id="@+id/mon_d"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="mon_d" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="화"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#A8FFF59C"/>
                    <Button
                        android:id="@+id/tue_b"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="tue_b" />
                    <Button
                        android:id="@+id/tue_l"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="tue_l" />
                    <Button
                        android:id="@+id/tue_d"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="tue_d" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="수"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#A8FFF59C"/>
                    <Button
                        android:id="@+id/wed_b"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="wed_b" />
                    <Button
                        android:id="@+id/wed_l"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="wed_l" />
                    <Button
                        android:id="@+id/wed_d"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="wed_d" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/thursday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="목"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#A8FFF59C"/>
                    <Button
                        android:id="@+id/thu_b"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="thu_b" />
                    <Button
                        android:id="@+id/thu_l"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="thu_l" />
                    <Button
                        android:id="@+id/thu_d"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="thu_d" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/friday"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="금"
                        android:textSize="30sp"
                        android:textColor="#5A5A5A"
                        android:gravity="center"
                        android:fontFamily="@font/kopubdotumbold"
                        android:background="#A8FFF59C"/>
                    <Button
                        android:id="@+id/fri_b"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="fri_b" />
                    <Button
                        android:id="@+id/fir_l"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="fri_l" />
                    <Button
                        android:id="@+id/fri_d"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:text="fri_d" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>